<div class="container body-content">
    <div class="row">
        {{#each articles}}
            <div class="col-md-6">
                <article>
                    <header>
                        <h2>{{this.title}}</h2>
                    </header>

                    <p>{{this.content}}
                    </p>

                    <small class="author">
                        {{this.author.fullName}}
                    </small>


                    <div class="pull-right">
                        <a class="btn btn-default btn-xs" style="background-color: #34A853"
                           href="/newsCreation/details/{{this.id}}">Прочети повече &raquo;</a>
                    </div>

                </article>
            </div>
        {{/each}}
    </div>
</div>

<div class="container body-content">
    <div class="row">


        {{#each deletions}}
            <div class="col-md-6">
                <article>
                    <header>
                        <h2>{{this.title}}</h2>
                        <h2>Created by:{{this.author}}</h2>
                        <h2>Deleted by:{{this.deleter}}</h2>
                    </header>
                    <p>{{this.content}}</p>
                </article>
            </div>
        {{/each}}


    </div>
</div>

<div class="container body-content">
    <div class="row">
        {{#if unanswered}}
            <h1>Annswered</h1>

        {{/if}}
        {{#each unanswered}}
            <div class="col-md-6">
                <article>
                    <header>
                        <h2>Asked by: {{this.author}} mail: {{this.authorMail}}</h2>
                        <h3>Subject: {{this.subject}}</h3>
                    </header>
                    <h3>Question</h3>
                    <p>{{this.content}}</p>
                    <h3>Answer</h3>
                    <p>{{this.answer}}</p>
                    <div class="pull-right">
                        <a class="btn btn-default btn-xs" href="/functionality/answer/{{this.id}}">Answer Now</a>
                    </div>

                </article>


            </div>

        {{/each}}
    </div>
</div>